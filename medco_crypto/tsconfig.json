
{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": [ "es2015", "dom" ],
        "outDir": "lib",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "declaration": true,
        "inlineSources": true,
        "typeRoots": [
        "node_modules/@types"
        ]
    },
    "files": [
        "src/mapping.ts",
        "src/index.ts"
    ]
}